<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="@dimen/_4sdp"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    android:id="@+id/job_details_card_view"
    android:padding="@dimen/_10sdp"
    app:cardElevation="@dimen/_6sdp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:orientation="horizontal"
          android:weightSum="4"
          android:layout_alignParentLeft="true">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_weight="1"
             android:padding="@dimen/_8sdp"
             android:background="@color/white"
             android:orientation="horizontal"
             android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:id="@+id/job_portal_Job_image_view"
                android:layout_gravity="center_vertical"
                android:src="@drawable/job"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:padding="@dimen/_2sdp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Job Heading Here"
                   android:textSize="16sp"
                   android:id="@+id/text_view_job_heading"
                   android:fontFamily="@font/abril_fatface"
                   android:textColor="@color/black" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Job Description Here"
                   android:textSize="12sp"
                   android:id="@+id/text_view_job_description"
                   android:layout_marginTop="@dimen/_8sdp"
                   android:fontFamily="@font/abril_fatface"
                   android:textColor="@color/black" />

            </LinearLayout>

         </LinearLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_weight="3"
             android:background="@color/white"
             android:layout_gravity="center_vertical|right"
             android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:text="Apply Now"
                android:background="#CF4F7B"
                android:elevation="0dp"
                android:gravity="center_vertical"
                android:id="@+id/button_interested_job_portal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#FFFFFF"
                android:textSize="10sp"/>

         </RelativeLayout>



      </LinearLayout>

   </RelativeLayout>

</com.google.android.material.card.MaterialCardView>